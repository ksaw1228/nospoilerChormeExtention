{
    "manifest_version": 3,
    "name": "Word Blocker",
    "version": "1.0",
  
    "permissions": [
      "activeTab",
      "scripting",
      "storage" 
    ],
  
    "action": {
      "default_popup": "popup.html"
    },
  
    "background": {
      "service_worker": "background.js"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content_script.js"]
      }
    ]
  }
  